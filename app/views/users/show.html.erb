<%= provide(:title, "Showing: " + @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
</div>

<p><small>E-Mail: <%= @user.email %><br>
  Created: <%= @user.created_at %><br>
  Updated: <%= @user.updated_at %><br>
  Now: <%= Time.now.utc %></small>
</p>
