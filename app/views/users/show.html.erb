<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @user.name %>
</p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<% if @user.microposts.count > 0 %>
<p>
  <strong>First Post:</strong>
  <%= @user.microposts.first.content %>
</p>
<% else %>
  <p>No posts yet from this user.</p>
<% end %>

<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>
